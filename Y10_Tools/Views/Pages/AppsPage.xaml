<Page x:Class="Y10_Tools.Views.Pages.AppsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Y10_Tools.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="AppsPage"
      d:DataContext="{d:DesignInstance local:FlashPage, IsDesignTimeCreatable=False}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ui:CardControl Grid.Row="0" Icon="{ui:ImageIcon 'pack://application:,,,/Assets/Apps/Aves.png'}" VerticalAlignment="Top" Margin="10">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
            Margin="0"
            FontTypography="BodyStrong"
            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
            Text="Aves Gallery"
            TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
            FontTypography="Body"
            Appearance="Secondary"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="Aves is a photo gallery, supporting many filee formats, with other nice feartures"
            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:Button Content="Install" />
            </ui:CardControl>
            <ui:CardControl Grid.Row="1" Icon="{ui:ImageIcon 'pack://application:,,,/Assets/Apps/Aurora.png'}" VerticalAlignment="Top" Margin="10">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
        Margin="0"
        FontTypography="BodyStrong"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Text="Aurora Store"
        TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
        FontTypography="Body" 
        Appearance="Secondary"
        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
        Text="A store with the sames app as the Google play store, but working on non-gapps system, with other privacy features."
        TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:Button Content="Install" />
        </ui:CardControl>
        <ui:CardControl Grid.Row="2" Icon="{ui:ImageIcon 'pack://application:,,,/Assets/Apps/CPU-Z.png'}" VerticalAlignment="Top" Margin="10">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
Margin="0"
FontTypography="BodyStrong"
Foreground="{DynamicResource TextFillColorPrimaryBrush}"
Text="CPU Z"
TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
FontTypography="Body" 
Appearance="Secondary"
Foreground="{DynamicResource TextFillColorSecondaryBrush}"
Text="Show infos about your tablet, like the manufacturer, the cpu, and much more."
TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:Button Content="Install" />
        </ui:CardControl>
        <ui:CardControl Grid.Row="3" Icon="{ui:ImageIcon 'pack://application:,,,/Assets/Apps/Droidify.png'}" VerticalAlignment="Top" Margin="10">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
Margin="0"
FontTypography="BodyStrong"
Foreground="{DynamicResource TextFillColorPrimaryBrush}"
Text="Droidify"
TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
FontTypography="Body" 
Appearance="Secondary"
Foreground="{DynamicResource TextFillColorSecondaryBrush}"
Text="A F-Droid client, with advenced functionalities and a refreshed UI."
TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:Button Content="Install" />
        </ui:CardControl>
        <ui:CardControl Grid.Row="4" Icon="{ui:ImageIcon 'pack://application:,,,/Assets/Apps/Aliucord.png'}" VerticalAlignment="Top" Margin="10">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
Margin="0"
FontTypography="BodyStrong"
Foreground="{DynamicResource TextFillColorPrimaryBrush}"
Text="Aliucord"
TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
FontTypography="Body" 
Appearance="Secondary"
Foreground="{DynamicResource TextFillColorSecondaryBrush}"
Text="A discord mod, still on the kotlin version of discord, for better performances and UX."
TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:Button Content="Install" />
        </ui:CardControl>
        <ui:CardControl Grid.Row="5" Icon="{ui:ImageIcon 'pack://application:,,,/Assets/Apps/Adaway.png'}" VerticalAlignment="Top" Margin="10">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
Margin="0"
FontTypography="BodyStrong"
Foreground="{DynamicResource TextFillColorPrimaryBrush}"
Text="Adaway"
TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
FontTypography="Body" 
Appearance="Secondary"
Foreground="{DynamicResource TextFillColorSecondaryBrush}"
Text="A must have ad blocker, that works with and without root."
TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:Button Content="Install" />
        </ui:CardControl>
        <ui:CardControl Grid.Row="6" Icon="{ui:ImageIcon 'pack://application:,,,/Assets/Apps/CYou.png'}" VerticalAlignment="Top" Margin="10">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
Margin="0"
FontTypography="BodyStrong"
Foreground="{DynamicResource TextFillColorPrimaryBrush}"
Text="Calculator You"
TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
FontTypography="Body" 
Appearance="Secondary"
Foreground="{DynamicResource TextFillColorSecondaryBrush}"
Text="A calculator, with a refined UI, and a lot more functionalities than default calculators."
TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:Button Content="Install" />
        </ui:CardControl>
        <ui:CardControl Grid.Row="7" Icon="{ui:ImageIcon 'pack://application:,,,/Assets/Apps/GCam.png'}" VerticalAlignment="Top" Margin="10">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
Margin="0"
FontTypography="BodyStrong"
Foreground="{DynamicResource TextFillColorPrimaryBrush}"
Text="Google Camera"
TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
FontTypography="Body" 
Appearance="Secondary"
Foreground="{DynamicResource TextFillColorSecondaryBrush}"
Text="A mod of the camera app found on google devices, to make the afful Y10 camera look a bit better."
TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:Button Content="Install" />
        </ui:CardControl>
    </Grid>
</Page>
