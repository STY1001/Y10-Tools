<Page x:Class="Y10_Tools.Views.Pages.RecoveryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Y10_Tools.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="RecoveryPage"
      d:DataContext="{d:DesignInstance local:FlashPage, IsDesignTimeCreatable=False}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.Effect>
                <BlurEffect x:Name="ConnectDeviceOverlayBlur" Radius="15"/>
            </Grid.Effect>
            <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ui:Card Grid.Column="0" Margin="10">
            <RadioButton GroupName="recovery_type">
                <StackPanel>
                    <ui:TextBlock FontTypography="Subtitle" Text="TWRP"/>
                    <ui:Image CornerRadius="4" BorderBrush="#33000000" Height="300" Source="pack://application:,,,/Assets/Recovery/TWRP_UI.png"/>
                </StackPanel>
            </RadioButton>
        </ui:Card>
        <ui:Card Grid.Column="1" Margin="10">
            <RadioButton GroupName="recovery_type">
                <StackPanel>
                    <ui:TextBlock FontTypography="Subtitle" Text="Orange Fox"/>
                    <ui:Image CornerRadius="4" BorderBrush="#33000000" Height="300" Source="pack://application:,,,/Assets/Recovery/OFOX_UI.png"/>
                </StackPanel>
            </RadioButton>
        </ui:Card>
        <ui:Card Grid.Column="2" Margin="10">
            <RadioButton GroupName="recovery_type">
                <StackPanel>
                    <ui:TextBlock FontTypography="Subtitle" Text="Default"/>
                    <ui:Image CornerRadius="4" BorderBrush="#33000000" Height="300" Source="pack://application:,,,/Assets/Recovery/Default_UI.png"/>
                </StackPanel>
            </RadioButton>
        </ui:Card>

        <ui:Button Grid.Row="1"
                   Grid.ColumnSpan="3"
                   Content="Flash !"
                   Appearance="Primary"
                   Icon="{ui:SymbolIcon Flash24}"
                   Height="53" Width="454"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border x:Name="ConnectDeviceOverlay" Visibility="Visible" Grid.Row="0" Grid.Column="0" Background="#4D000000" CornerRadius="15">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Height="200" Source="/Assets/connect-device.png"/>
                    <ui:TextBlock FontTypography="TitleLarge" Margin="10" Text="To use this feature, select your device in the settings !"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
