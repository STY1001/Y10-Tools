<Page
    x:Class="Y10_Tools.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Y10_Tools.Helpers"
    xmlns:local="clr-namespace:Y10_Tools.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ui:Card Grid.Column="0" VerticalAlignment="Top" Margin="10">
            <StackPanel>
                <ui:TextBlock
FontTypography="Subtitle"
Text="Device" Margin="10"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Grid.Row="0"  Grid.Column="0"
                    Margin="10,0,0,0"
FontTypography="BodyStrong"
Text="Device Model" />
                    <ui:DropDownButton Content="Y10 2019" Icon="{ui:SymbolIcon Tablet24}" Margin="10,10,0,0" Grid.Row="1" Grid.Column="0">
                        <ui:DropDownButton.Flyout>
                            <ContextMenu>
                                <MenuItem Header="Y10 2019" />
                                <MenuItem Header="Y10 2020" />
                            </ContextMenu>
                        </ui:DropDownButton.Flyout>
                    </ui:DropDownButton>
                    <ui:TextBlock Grid.Row="0"  Grid.Column="1"
                    Margin="10,0,0,0"
FontTypography="BodyStrong"
Text="Device Name" />
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <ui:DropDownButton Grid.Column="0" x:Name="dropDownADB" Content="Select your device" Icon="{ui:SymbolIcon Tablet24}" Margin="10,10,0,0">
                            <ui:DropDownButton.Flyout>
                                <ContextMenu x:Name="devicesSelector">
                                    <MenuItem Header="ADB Name" />
                                    <MenuItem Header="ADB Name" />
                                </ContextMenu>
                            </ui:DropDownButton.Flyout>
                        </ui:DropDownButton>
                        <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon ArrowClockwise12}" Margin="10,10,0,0"
                                   ToolTipService.ToolTip="Refresh the list of devices" Click="RefreshDevices"></ui:Button>
                    </Grid>
                </Grid>
            </StackPanel>
        </ui:Card>
    </Grid>
</Page>
